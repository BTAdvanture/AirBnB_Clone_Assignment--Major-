<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Airbnb | Holiday Homes</title>
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
  <!-- Font Awecome -->
  <script src="https://kit.fontawesome.com/5330c4447b.js" crossorigin="anonymous"></script>
  <!-- External Css -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="icon" type="image/x-icon" href="https://cdn-icons-png.flaticon.com/512/2111/2111320.png">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <!-- favicon added -->
  <link rel="icon" type="image/x-icon" href="https://cdn-icons-png.flaticon.com/512/2111/2111320.png">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css" rel="stylesheet" />
</head>

<body>
  <!-- This is login and signup form created partial and inclued here -->
  <%-include('../partials/login')%>

  <%-include('../partials/nav')%>

  <%if(success && success !='' ){%>
  <div class="alert alert-success container alert-dismissible fade show" role="alert">
    <%=success%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% }else if(error && error!='' ){%>
  <div class="alert alert-danger container alert-dismissible fade show" role="alert">
    <%=error%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <%}else if(alert && alert!='' ){%>
  <div class="alert alert-warning container alert-dismissible fade show" role="alert">
    <%=alert%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% }%>





  <!-- This is card that stores all hotels information this card is looped using foreach
       data get from mongodb atlas sampledatabase -->
  <section class="container">

    <div class="row gy-1">
      <%data.forEach((element)=>{%>
      <div class=" col-12 col-sm-6 col-md-4 col-lg-3 mb-3" data-aos="fade-up">
        <div class="card">
          <i class="fa-regular fa-heart"></i>
          <a href="/details/<%=element.name%>"><img class="card-img " src="<%=element.images%>" class="card-img-top" alt="image"></a>

          <div class="card-body">
            <span class="card-text location">
              <b>
                <%=element.address%>
              </b>
            </span>
            <span class="card-text text-start text-secondary">
              <%=element.name%>
            </span>
            <span class="card-text price text-start">
              <b>â‚¹ <%=element.Price%></b> night
            </span>

          </div>
        </div>
      </div>
      <%});%>
    </div>
  </section>

  <!-- card ends here -->
  <div class="bottom-footer">
    <%-include('../partials/footer')%>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init();
  </script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.js"></script>
</body>

</html>