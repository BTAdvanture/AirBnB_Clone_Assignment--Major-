<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin | Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css" rel="stylesheet" />
</head>
<style>
  body {
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  }

  .main-container {
    display: flex;
    height: 80vh;
    width: 100vw;
    align-items: center;
    justify-content: center;
    gap: 50px;
  }

  .container-1 {
    height: auto;
    width: 40%;
    border: 0.5px solid pink;
    border-radius: 20px;
  }

  .text-center {
    font-family: cursive;
    color: #ff385c;
    font-weight: bolder;
  }

  .image-admin img {
    width: 90%;
  }

  .Logout {
    background-color: #ff385c;
    padding: .7rem;
    border-radius: 1rem;
    color: whitesmoke;
    opacity: 0.9;

  }

  .Logout:hover {
    background-color: #ff385c;
    color: white;
    opacity: 1;

  }



  @media screen and (max-width: 900px) {
    .main-container {
      display: flex;
      flex-direction: column-reverse;
      justify-content: center;
      gap: 30px;
      height: auto;

    }

    .container-1 {
      width: 100%;
      align-self: center;
    }

    .image-admin img {
      width: 70%;
      margin-top: 15rem;
  
    
    }
  }




  @media screen and (max-width: 600px) {
    .main-container {
      margin-top: 1rem;
      display: flex;
      width: 100vw;
      height: 80vh;
      justify-content: center;
      align-items: center;
      text-align: center;

    }
  }
</style>

<body>

  <nav class="navbar bg-light">
    <div class="container">
      <a class="navbar-brand" href="/"><img class="logo" width="40px"
          src="https://cdn-icons-png.flaticon.com/512/2111/2111320.png" alt=""></a>
      <div class="d-flex">
        <%if(locals.details){%>
          <a class="Logout btn" href="/logoutAdmin">Logout Admin</a>
          <%}%>
      </div>
    </div>
  </nav>

  <!-- flash messages -->


  <%if(success && success !='' ){%>
    <div class="alert alert-success container alert-dismissible fade show mt-3" role="alert">
      <%=success%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% }else if(error && error!='' ){%>
      <div class="alert alert-danger container alert-dismissible fade show mt-3" role="alert">
        <%=error%>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <%}else if(alert && alert!='' ){%>
        <div class="alert alert-warning container alert-dismissible fade show" role="alert">
          <%=alert%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%>


          <!-- flash messages -->


          <!-- Pills navs -->
          <div class="main-container container-fluid ">
            <%if(locals.details){%>
              <h1>Welcome Admin Go to <a style="color: #fe5e62" href="/dashbord">Dashbord</a></h1>

              <%}else{%>
                <div class="container-1 shadow-5 p-4">
                  <h1 class="text-center">Admin Login</h1>
                  <hr>
                  <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                    <!-- <li class="nav-item" role="presentation">
                        <a class="nav-link text-white" style="background-color: #ff385c" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
                            aria-controls="pills-login" aria-selected="true">Login</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="#pills-register" role="tab"
                            aria-controls="pills-register" aria-selected="false">Register</a>
                    </li>
                  </ul>
                  <!-- Pills navs -->

                  <!-- Pills content -->
                  <div class="tab-content">
                    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                      <form method="POST" action="/adminLogin">

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                          <input type="email" id="loginName" class="form-control" name="adminemail"
                            value="admin@gmail.com" />
                          <label class="form-label" for="loginName">Email or username</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                          <input type="password" value="admin" id="loginPassword" class="form-control" name="adminpsw" />
                          <label class="form-label" for="loginPassword">Password</label>
                        </div>

                        <!-- 2 column grid layout -->
                        <div class="row mb-4">
                          <div class="col-md-6 d-flex justify-content-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-3 mb-md-0">
                              <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                              <label class="form-check-label" for="loginCheck"> Remember me </label>
                            </div>
                          </div>

                          <div class="col-md-6 d-flex justify-content-center">
                            <!-- Simple link -->
                            <a href="#!">Forgot password?</a>
                          </div>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" style="color: white; background-color: #ff385c;"
                          class="btn btn-block mb-4">Sign in</button>

                        <!-- Register buttons -->
                        <!-- <div class="text-center">
                    <p>Not a member? <a href="#!">Register</a></p>
                  </div> -->
                      </form>
                    </div>
                    <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">





                      <!-- Admin signup starts here -->
                      <form method="POST" action="/adminSignup">


                        <!-- Name input -->
                        <div class="form-outline mb-4">
                          <input type="text" id="registerName" class="form-control" name="name" />
                          <label class="form-label" for="registerName">Name</label>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                          <input type="tel" id="registerUsername" class="form-control" name="number" />
                          <label class="form-label" for="registerUsername">Mob</label>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                          <input type="email" id="registerEmail" class="form-control" name="email" />
                          <label class="form-label" for="registerEmail">Email</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                          <input type="password" id="registerPassword" class="form-control" name="password" />
                          <label class="form-label" for="registerPassword">Password</label>
                        </div>

                        <!-- Repeat Password input -->
                        <div class="form-outline mb-4">
                          <input type="password" id="registerRepeatPassword" class="form-control" name="cpassword" />
                          <label class="form-label" for="registerRepeatPassword">Repeat password</label>
                        </div>

                        <!-- Checkbox -->
                        <div class="form-check d-flex justify-content-center mb-4">
                          <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked
                            aria-describedby="registerCheckHelpText" />
                          <label class="form-check-label" for="registerCheck">
                            I have read and agree to the terms
                          </label>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" style="background-color: #ff385c; color: white;"
                          class="btn btn-block mb-3">Sign in</button>
                      </form>
                    </div>
                  </div>

                </div>
                <div class="image-admin">
                  <img src="https://www.webex.com/content/dam/wbx/us/images/covid/business/it-admin-img-2.png" alt="">
                </div>
                <%}%>

          </div>


          <!-- Pills content -->
          <!-- MDB -->
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous"></script>
          <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.js"></script>
</body>

</html>